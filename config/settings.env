# VM Post-Provisioning Settings
# This file contains configuration values for the post-provisioning scripts

# User settings
NEW_USER="sysadmin"
SSH_PORT=2222

# Feature toggles
INSTALL_DOCKER=true
INSTALL_MONITORING=true
ENABLE_AUTO_UPDATES=true

# Security settings
MAX_AUTH_TRIES=3
SSH_CLIENT_ALIVE_INTERVAL=300
FAIL2BAN_BAN_TIME=86400
ENABLE_IPV6=false

# Docker settings
DOCKER_USER="sysadmin"
DOCKER_GROUP="docker"

# Paths
LOG_DIR="/var/log/post-provision"
SCRIPTS_DIR="/opt/scripts"
CONFIG_DIR="/opt/scripts/config"
TRIGGER_DIR="/etc/provisioning-pending" 